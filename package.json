{
  "name": "blink1control2",
  "version": "2.0.0-pre1",
  "author": "ThingM",
  "description": "Blink1Control implemented in ElectronJs, NodeJs, & ReactJs",
  "productName": "Blink1Control2",
  "companyName": "ThingM",
  "bugs": "http://github.com/todbot/blink1control2/issues",
  "scripts": {
    "startdev": "NODE_ENV=development npm run start",
    "start": "electron app",
    "watch": "NODE_ENV=development webpack-dev-server --hot --inline",
    "pack": "webpack -p ",
    "pkg:mac": "electron-packager . $npm_package_productName --overwrite --out=dist --prune --asar --platform=darwin --arch=x64 --version=$npm_package_electronVersion --icon=assets/blink1-icon0.icns --ignore='^/dist$'",
    "dist:test": "build --dir",
    "dist:mac": "build --mac",
    "clean": "rimraf node_modules app/node_modules",
    "env": "env",
    "postinstall": "install-app-deps && electron-rebuild --pre-gyp-fix --force --module-dir app"
  },
  "build": {
    "appId": "com.thingm.blink1control2",
    "app-category-type": "public.app-category.utilities",
    "iconUrl": "http://eatodo.s3.amazonaws.com/icon.ico",
    "asar": false,
    "mac": {
      "title": "Blink1Control2",
      "background": "pkg/background.png",
      "icon": "pkg/icon.icns",
      "icon-size": 128,
      "contents": [
        {
          "x": 355,
          "y": 125,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 155,
          "y": 125,
          "type": "file"
        }
      ]
    }
  },
  "devDependencies": {
    "babel": "^6.3.26",
    "babel-core": "^6.4.5",
    "babel-loader": "^6.2.1",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.3.13",
    "bootstrap": "^3.3.6",
    "css-loader": "^0.23.1",
    "electron-builder": "^5.11.2",
    "electron-prebuilt": "^0.36.9",
    "electron-rebuild": "^1.1.3",
    "file-loader": "^0.9.0",
    "font-awesome": "^4.5.0",
    "json-loader": "^0.5.4",
    "node-libs-browser": "^1.0.0",
    "react": "^0.14.7",
    "react-addons-linked-state-mixin": "^0.14.7",
    "react-bootstrap": "^0.28.2",
    "react-bootstrap-switch": "^3.4.4",
    "react-color": "^1.3.6",
    "react-dom": "^0.14.7",
    "react-fontawesome": "^0.3.3",
    "reflexbox": "^1.1.0",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1"
  }
}
