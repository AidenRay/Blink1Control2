{
  "name": "blink1control2",
  "version": "2.0.0-pre1",
  "author": "ThingM",
  "description": "Blink1Control2 GUI app for controlling blink(1) devices",
  "productName": "Blink1Control2",
  "companyName": "ThingM",
  "bugs": "http://github.com/todbot/blink1control2/issues",
  "scripts": {
    "startdev": "NODE_ENV=development npm run start",
    "startdev:win": "set NODE_ENV=development&& npm run start",
    "start": "electron app",
    "watch": "NODE_ENV=development webpack-dev-server --hot --inline",
    "watch:win": "set NODE_ENV=development&& webpack-dev-server --hot --inline",
    "webpack": "webpack -p ",
    "pkg:mac": "electron-packager app Blink1Control2 --overwrite --out=dist --prune --asar --platform=darwin --arch=x64 --icon=app/images/icons/blink1mk2-icon2-128px.icns --ignore='^/dist$'",
    "pkg:win": "electron-packager app Blink1Control2 --overwrite --out=dist --prune --asar --platform=win32 --arch=x64 --icon=app/images/icons/blink1mk2-icon2-128px.ico --ignore='^/dist$'",
    "dist:test": "build --dir",
    "dist:mac": "build --mac",
    "dist:win": "build --win",
    "clean": "rimraf app/node_modules node_modules",
    "env": "env",
    "postinstall": "install-app-deps && electron-rebuild --force --force --module-dir app --pre-gyp-fix"
  },
  "build": {
    "appId": "com.thingm.blink1control2",
    "app-category-type": "public.app-category.utilities",
    "iconUrl": "http://eatodo.s3.amazonaws.com/icon.ico",
    "asar": true,
    "npmRebuild": false,
    "options": {
        "prune": true,
        "overwrite": true,
        "outzz": "dist"
    },
    "win": {
        "icon": "app/images/icons/blink1mk2-icon2-128px.ico"
    },
    "mac": {
      "title": "Blink1Control2",
      "background": "pkg/background.png",
      "icon": "app/images/icons/blink1mk2-icon2-128px.icns",
      "icon-size": 128,
      "contents": [
        {
          "x": 355,
          "y": 125,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 155,
          "y": 125,
          "type": "file"
        }
      ]
    }
  },
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-core": "^6.11.4",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "bootstrap": "^3.3.6",
    "css-loader": "^0.23.1",
    "electron-builder": "^5.20.0",
    "electron-packager": "^7.4.0",
    "electron-prebuilt": "^1.3.1",
    "electron-rebuild": "^1.1.5",
    "file-loader": "^0.9.0",
    "font-awesome": "^4.5.0",
    "json-loader": "^0.5.4",
    "node-libs-browser": "^1.0.0",
    "react": "^0.14.8",
    "react-addons-linked-state-mixin": "^0.14.8",
    "react-bootstrap": "^0.28.5",
    "react-bootstrap-switch": "^3.4.5",
    "react-color": "^1.3.6",
    "react-dom": "^0.14.7",
    "react-fontawesome": "^0.3.3",
    "reflexbox": "^1.1.0",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1"
  }
}
